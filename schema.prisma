datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
  isAdmin   Boolean   @default(false)
}

model Experience {
  id              String   @id @default(cuid())
  title           String   @default("")
  job             String   @default("")
  content         String   @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  startDate       String   @default("")
  endDate         String   @default("")
  technos         Techno[] @relation("Experience_technos")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_id        String?
  blurhash        String   @default("")
  image_40        String   @default("")
  image_150       String   @default("")
  image_300       String   @default("")
  image_600       String   @default("")
}

model Techno {
  id              String       @id @default(cuid())
  name            String       @default("")
  content         String       @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  experiences     Experience[] @relation("Experience_technos")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_id        String?
  blurhash        String       @default("")
  image_40        String       @default("")
  image_150       String       @default("")
  image_300       String       @default("")
  image_600       String       @default("")
}
